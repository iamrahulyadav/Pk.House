<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_or_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginOrRegister"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/light_backgroud">

    <Button
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:text="Login Now"
        android:id="@+id/bt_login_now"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:background="@drawable/backgroud_button"
        android:visibility="visible"
        android:layout_marginBottom="35dp"/>

    <Button
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:id="@+id/bt_create_account"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorWhite"
        android:background="@drawable/backgroud_button"
        android:visibility="gone"
        android:layout_marginBottom="35dp"/>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/progress_dialog" >
    </ProgressBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            android:id="@+id/rl_login_title_text">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN CUSTOMERS"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_basic_info" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:id="@+id/rl_register_title_text">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DONT HAVE AN ACCOUNT? REGISTER NOW"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_fstraight_line"/>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:id="@+id/ll_login_email"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:background="@drawable/button_edit_test_corner">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/login_email"
                    android:inputType="number"
                    android:hint="Mobile Number"
                    android:maxLength="12"
                    android:background="@null"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:id="@+id/ll_login_password"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:background="@drawable/button_edit_test_corner">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/login_password"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:background="@null"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:id="@+id/ll_tv_dont_have_account"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_dont_have_account"
                    android:text="Sign Up Now"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="6dp"
                    android:textColor="@color/colorWhite"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_forgot_password"
                    android:text="Forget Password"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_dont_have_account"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textColor="@color/colorRed"
                    android:visibility="visible"/>

            </RelativeLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:id="@+id/ll_register_name"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:background="@drawable/button_edit_test_corner">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/register_name"
                    android:inputType="text"
                    android:hint="Your Name"
                    android:background="@null"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:id="@+id/ll_register_email"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:background="@drawable/button_edit_test_corner">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/register_email"
                    android:inputType="textEmailAddress"
                    android:hint="Email Address"
                    android:background="@null"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:id="@+id/ll_regiter_phone"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:background="@drawable/button_edit_test_corner">


                <RelativeLayout
                    android:id="@+id/rl_sp_chose_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/button_edit_test_corner">
                    <Spinner
                        android:id="@+id/sp_select_country"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:entries="@array/chose_a_country"
                        android:background="@drawable/button_edit_test_corner"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_toRightOf="@+id/rl_sp_chose_country"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/button_edit_test_corner">

                    <TextView
                        android:id="@+id/tv_country_code"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:text="Country Code"
                        android:paddingLeft="4dp"
                        android:gravity="center" />
                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/rl_mobile_code"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_below="@+id/rl_sp_chose_country"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/button_edit_test_corner">

                    <EditText
                        android:id="@+id/et_mobile_code"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:hint="Mobile Code"
                        android:inputType="number"
                        android:background="@null"
                        android:maxLength="3"
                        android:textSize="12dp"
                        android:paddingLeft="2dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center" />

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@+id/rl_mobile_code"
                    android:layout_below="@+id/rl_sp_chose_country"
                    android:background="@drawable/button_edit_test_corner">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:id="@+id/register_phone"
                        android:inputType="number"
                        android:maxLength="7"
                        android:hint="Mobile Number"
                        android:textSize="12dp"
                        android:paddingLeft="2dp"
                        android:background="@null"
                        android:layout_marginLeft="10dp"/>

                </RelativeLayout>



            </RelativeLayout></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:id="@+id/ll_regiter_pass"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:background="@drawable/button_edit_test_corner">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/register_pass"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:background="@null"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:id="@+id/ll_tv_already_have_account"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_already_have_account"
                    android:text="Already Have An Account! Login now"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="6dp"
                    android:textColor="@color/colorWhite"/>

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_live_chat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/chat_icon"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="6dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/live_support_icon"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>
