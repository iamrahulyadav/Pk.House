<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="house.pkhouse.LoginSelector"
    android:background="@drawable/background">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_image"
        android:id="@+id/pk_estate_image"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:text="Normal Login"
        android:id="@+id/bt_normal_login"
        android:textStyle="bold"
      android:layout_centerInParent="true"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:background="@drawable/backgroud_button"
        android:visibility="visible"/>

    <Button
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:text="Franchiser Login"
        android:textAllCaps="false"
        android:id="@+id/bt_franchiser_login"
        android:textStyle="bold"
        android:layout_below="@+id/bt_normal_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/backgroud_button"
        android:visibility="visible"/>


    <RelativeLayout
        android:id="@+id/rl_live_chat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/chat_icon"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="6dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/live_support_icon"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>
