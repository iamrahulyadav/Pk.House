<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallary"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/tv_galary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/colorRed"
            android:id="@+id/tv_galary_start"
            android:layout_toRightOf="@+id/tv_galary"
            android:layout_marginLeft="2dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGray"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_tstraight_line"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/default_image"
                android:id="@+id/image_view1"/>

            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Select Image"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:id="@+id/bt_select_image1"
                android:background="@drawable/button_shap_color"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/default_image"
                android:id="@+id/image_view2"
                android:layout_weight="1"/>


            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/bt_select_image2"
                android:text="Select Image"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_shap_color"/>
        </LinearLayout></LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/default_image"
                android:id="@+id/image_view3"/>

            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Select Image"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:id="@+id/bt_select_image3"
                android:background="@drawable/button_shap_color"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/default_image"
                android:id="@+id/image_view4"
                android:layout_weight="1"/>


            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/bt_select_image4"
                android:text="Select Image"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_shap_color"/>
        </LinearLayout></LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/default_image"
                android:id="@+id/image_view5"/>

            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Select Image"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:id="@+id/bt_select_image5"
                android:background="@drawable/button_shap_color"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/default_image"
                android:id="@+id/image_view6"
                android:layout_weight="1"/>


            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/bt_select_image6"
                android:text="Select Image"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_shap_color"/>
        </LinearLayout></LinearLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/add_image"
            android:id="@+id/image_view_pic_add"
            android:layout_gravity="center"/>


        <GridView
            android:id="@+id/PhoneImageGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:verticalSpacing="15dp"
            android:layout_marginBottom="120dp"
            android:numColumns="3">

        </GridView>

      <!--  <GridView
            android:id="@+id/PhoneImageGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:horizontalSpacing="15dp"
            android:numColumns="3"
            android:padding="10dp"
            android:verticalSpacing="15dp"
            android:layout_marginBottom="40dp"
            android:layout_below="@+id/open_galary">

        </GridView>-->

    </LinearLayout>


</ScrollView>